generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  downloadEvents DownloadEvent[]
  reportArtifacts ReportArtifact[]
  auditLogs     AuditLog[] @relation("AuditActor")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Lab {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  tags        String[]
  coverImage  String?
  isPublished Boolean  @default(false)
  simulations Simulation[]
  createdAt   DateTime @default(now())

  @@index([isPublished])
}

model Simulation {
  id            String   @id @default(cuid())
  labId         String
  slug          String   @unique
  title         String
  version       String
  difficulty    String
  prerequisites String[]
  isPublished   Boolean  @default(false)
  lab           Lab      @relation(fields: [labId], references: [id], onDelete: Cascade)
  downloadEvents DownloadEvent[]
  reportArtifacts ReportArtifact[]
  createdAt     DateTime @default(now())

  @@index([labId])
  @@index([isPublished])
}

model DownloadEvent {
  id            String   @id @default(cuid())
  userId        String
  simulationId  String
  createdAt     DateTime @default(now())
  ipHash        String
  userAgent     String?
  meta          Json
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  simulation    Simulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)

  @@index([simulationId])
  @@index([userId])
  @@index([createdAt])
}

model ReportArtifact {
  id              String   @id @default(cuid())
  userId          String
  simulationId    String
  sessionSnapshot Json
  pdfUrl          String
  createdAt       DateTime @default(now())
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  simulation      Simulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)

  @@index([simulationId])
  @@index([userId])
  @@index([createdAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?
  action      String
  entityType  String
  entityId    String
  meta        Json
  createdAt   DateTime @default(now())
  actor       User?     @relation("AuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([actorUserId])
  @@index([createdAt])
}
